.header {
    position: fixed;
    top: 0;
    left: 0;
    padding: 0 20px;
    width: 100%;
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    gap: 20px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    z-index: 1000;
    background-color: #fff

    .logo {
        margin-right: auto;
    }

    .search {
        width: 200px;
        border: none;

        &-icon {
            color: gray;
        }
    }

    ul {
        display: flex;
        gap: 10px;
        padding: 0;
        margin: 0;
        list-style: none;

        li {
            flex-shrink: 0;
            cursor: pointer;
        }
    }
}